---
- hosts: DC1
  tasks:
  - name: Load mlag variable
    include_vars:
      file: /home/coder/project/labfiles/AnsibleFabric/vars/mlag.yaml
      name: mlag

  - name: create directory for device configs 
    file:
      path: /home/coder/project/labfiles/AnsibleFabric/generated_config/{{inventory_hostname}}
      state: directory

  - name: Create mlag
    template:
      src: /home/coder/project/labfiles/AnsibleFabric/templates/mlag.j2
      dest: /home/coder/project/labfiles/AnsibleFabric/generated_config/{{inventory_hostname}}/{{inventory_hostname}}_mlag.cfg