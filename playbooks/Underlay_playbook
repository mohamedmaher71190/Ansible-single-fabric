---
- hosts: DC1
  tasks:
  - name: Load underlay variable
    include_vars:
      file: /home/coder/project/labfiles/AnsibleFabric/vars/underlay
      name: underlay

  - name: create directory for device configs 
    file:
      path: /home/coder/project/labfiles/AnsibleFabric/generated_config/{{inventory_hostname}}
      state: directory

  - name: Create interfaces
    template:
      src: /home/coder/project/labfiles/AnsibleFabric/templates/underlay_interfaces.j2
      dest: /home/coder/project/labfiles/AnsibleFabric/generated_config/{{inventory_hostname}}/{{inventory_hostname}}_underlay.cfg
  - name: Create BGP config
    template:
      src: /home/coder/project/labfiles/AnsibleFabric/templates/BGP_Underlay.j2
      dest: /home/coder/project/labfiles/AnsibleFabric/generated_config/{{inventory_hostname}}/{{inventory_hostname}}_underlay_BGP.cfg
